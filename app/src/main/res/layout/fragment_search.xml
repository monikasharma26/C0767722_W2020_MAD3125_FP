<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="65dp"
    android:background="@color/login_bk_color">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Search Customer"
        android:textColor="@color/contentTextColor"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginTop="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtCUSTNAme"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="389dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_action_search"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Customer Name"
            android:inputType="number"
            android:textColor="@color/contentTextColor" />
    </com.google.android.material.textfield.TextInputLayout>


    <ScrollView
        android:id="@+id/scrollViewSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textInputLayoutUsername"
        android:layout_marginBottom="10dp"
        android:isScrollContainer="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="horizontal|vertical">

        <RelativeLayout
            android:id="@+id/relativeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/headingUserDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Customer Details"
                android:textColor="@color/contentTextColor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headingUserDetails"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Name : "
                android:textColor="@color/contentTextColor"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/customerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerName"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:text="Address : "
                android:textColor="@color/contentTextColor"
                android:textSize="20sp" />



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>